 #!/usr/bin/bash

if [ "$1" == "-d" ]; then
  docker-compose -f docker-compose.dev.yml -p node-sql down
elif [ "$1" == "-b" ]; then
  docker-compose -f docker-compose.dev.yml build --no-cache --force-rm
elif [ "$1" == "-t" ]; then
  docker-compose -f docker-compose.test.yml -p node-sql  up -d --force-recreate
elif [ "$1" == "-td" ]; then
  docker-compose -f docker-compose.test.yml -p node-sql down
else
  docker-compose -f docker-compose.dev.yml -p node-sql  up -d --force-recreate
fi
